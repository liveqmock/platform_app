<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#D8357BBF"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <!--
             <TextView android:id="@+id/time_current"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="1dip"
            android:paddingLeft="4dip"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dip" />
        -->


        <!--
             <TextView android:id="@+id/time"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="1dip"
            android:paddingRight="4dip"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dip" />
        -->

        <ImageView
            android:contentDescription="@string/hello_world"
            android:id="@+id/playerquality"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/playervolume"
            android:src="@drawable/player_icon_quality" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/playerquality"
            android:paddingBottom="6dp"
            android:paddingTop="6dp" >
          

            <SeekBar
                android:id="@+id/mediacontroller_progress"
                style="@style/YaSeekBar"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/playerstop" />

            <ImageView
                android:contentDescription="@string/hello_world"
                android:id="@+id/playpause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
               	android:layout_margin="6dp"
               	android:visibility="gone"
                android:src="@drawable/player_icon_pause" />

            <ImageView
                android:contentDescription="@string/hello_world"
                android:id="@+id/playerstop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_toRightOf="@+id/playpause"
                android:src="@drawable/player_icon_stop" />

            <TextView
                android:id="@+id/playerexpiredtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mediacontroller_progress"
                android:layout_toRightOf="@+id/playerstop"
                android:text=""
                android:textSize="7sp" />

            <TextView
                android:id="@+id/playertotaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mediacontroller_progress"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="7sp" />

        </RelativeLayout>
        

        <ImageView
            android:contentDescription="@string/hello_world"
            android:id="@+id/playervolume"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:src="@drawable/player_icon_volume_max" />
    </RelativeLayout>

</LinearLayout>