<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/carddetailcastandcrew_separtor"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="#efefef" >
    </View>

    <TextView
        android:id="@+id/carddetailcastandcrew_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:singleLine="true"
        android:text="@string/carddetailsectionheader_credits"
        android:textColor="#4b4b4c"
        android:textSize="@dimen/textsize_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/carddetailcastcrew_leftlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/carddetailcastcrew_rightlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/carddetailcastcrew_fulldetails"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
            android:paddingRight="12dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/moredetails"
            android:textColor="#54B5E9"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>

</LinearLayout>