<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="32dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/purchasepackItem1"
        android:layout_width="124dp"
        android:layout_height="32dp"
        android:background="@drawable/purchaseitem_bg" >

        <TextView
            android:id="@+id/purchasepackItem1_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:text="Rent"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/purchasepackItem1_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/purchasepackItem1_type"
            android:singleLine="true"
            android:text="HD"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/purchasepackItem1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/purchasepackItem1_quality"
            android:singleLine="true"
            android:text="Rs99"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/purchasepackItem1_offer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="1dp"
            android:background="@drawable/purchaseitemoffer_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="50%"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="off"
                android:textColor="#ffffff"
                android:textSize="8sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/purchasepackItem2"
        android:layout_width="124dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/purchaseitem_bg" >

        <TextView
            android:id="@+id/purchasepackItem2_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:text="Rent"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/purchasepackItem2_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/purchasepackItem2_type"
            android:singleLine="true"
            android:text="HD"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/purchasepackItem2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/purchasepackItem2_quality"
            android:singleLine="true"
            android:text="Rs99"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/purchasepackItem2_offer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="1dp"
            android:background="@drawable/purchaseitemoffer_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="50%"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="off"
                android:textColor="#ffffff"
                android:textSize="8sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>