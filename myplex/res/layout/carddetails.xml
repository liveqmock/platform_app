<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.apalya.myplex"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardvideosize"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:background="#000000" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/radiohead_in_rainbows" />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play" />
    </RelativeLayout>

    <com.apalya.myplex.views.CustomFastScrollView
        android:id="@+id/fast_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:background="#e6e6e6" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"
            android:focusable="true" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </com.apalya.myplex.views.CustomFastScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#e6e6e6" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/cardmoreinfoheight"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/cardmoreinfoheight"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/card_info_rent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/card_rent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/cardmoreinfoheight"
                    android:background="#D8D8D8" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/social_share" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>