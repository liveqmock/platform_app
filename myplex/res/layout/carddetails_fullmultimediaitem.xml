<?xml version="1.0" encoding="utf-8"?>
<com.apalya.myplex.views.VerticalLineRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_gap_4"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/card_icontimeline" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginRight="@dimen/margin_gap_4"
        android:layout_toRightOf="@+id/imageView1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/frame" >

            <ImageView
                android:id="@+id/carddetailmultimedia_stackview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/radiohead_in_rainbows" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/carddetailmultimedia_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_gap_4"
                android:layout_marginRight="@dimen/margin_gap_4"
                android:gravity="center_vertical"
                android:textColor="#4b4b4c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/carddetailmultimedia_secondaryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_gap_4"
                android:layout_marginRight="@dimen/margin_gap_2"
                android:layout_marginTop="@dimen/margin_gap_4"
                android:textColor="#4b4b4c"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

</com.apalya.myplex.views.VerticalLineRelativeLayout>