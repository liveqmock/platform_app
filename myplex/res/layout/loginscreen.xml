<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="@layout/grey_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:animateLayoutChanges="true" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/size_48"
                android:contentDescription="@string/required"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/fblogin"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/margin_gap_16"
                android:layout_marginRight="@dimen/margin_gap_16"
                android:background="@drawable/logfacebook"
                android:text="@string/facebook"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14" />

            <Button
                android:id="@+id/googlelogin"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_48"
                android:layout_below="@id/fblogin"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_gap_16"
                android:layout_marginRight="@dimen/margin_gap_16"
                android:background="@drawable/loggoogle"
                android:text="@string/google"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/Msg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_48"
                android:layout_below="@id/googlelogin"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/margin_gap_14"
                android:text="@string/or"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14" />

            <LinearLayout
                android:id="@+id/userfields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Msg"
                android:layout_marginLeft="@dimen/margin_gap_16"
                android:layout_marginRight="@dimen/margin_gap_16"
                android:background="@layout/background_card"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_gap_16"
                    android:paddingTop="@dimen/margin_gap_14" >

                    <TextView
                        android:id="@+id/loginname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uName"
                        android:textSize="@dimen/textsize_14" />

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:ems="10"
                        android:hint="@string/required"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/margin_gap_8"
                        android:paddingRight="@dimen/margin_gap_8"
                        android:textSize="@dimen/textsize_14" />
                </LinearLayout>

                <View
                    android:id="@+id/linesep"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_gap_16"
                    android:paddingTop="@dimen/margin_gap_14" >

                    <TextView
                        android:id="@+id/passwordField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textSize="@dimen/textsize_14" />

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:ems="10"
                        android:hint="@string/required"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/margin_gap_8"
                        android:paddingRight="@dimen/margin_gap_8"
                        android:textSize="@dimen/textsize_14" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/forgetPwdMsg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_48"
                android:layout_below="@id/userfields"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/margin_gap_14"
                android:text="@string/forgetPwd"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forgetPwdMsg"
                android:layout_marginLeft="@dimen/margin_gap_16"
                android:layout_marginRight="@dimen/margin_gap_16"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/signup"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginRight="@dimen/margin_gap_16"
                    android:layout_weight="0.5"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/buttonimg"
                    android:text="@string/signup"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14" />

                <Button
                    android:id="@+id/login"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginLeft="@dimen/margin_gap_16"
                    android:layout_weight="0.5"
                    android:background="@drawable/buttonimg"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/letmeinMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/linearLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_gap_16"
                android:paddingBottom="@dimen/margin_gap_16"
                android:paddingLeft="@dimen/margin_gap_16"
                android:paddingRight="@dimen/margin_gap_16"
                android:text="@string/letme"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/slidenotificationlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarheight"
        android:layout_alignParentTop="true"
        android:background="#FF3239" >

        <TextView
            android:id="@+id/slidenotificationtextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loading"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:indeterminateOnly="true"
        android:visibility="gone" />

</RelativeLayout>