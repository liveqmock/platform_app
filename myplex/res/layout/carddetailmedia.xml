<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background" >


    <LinearLayout
        android:id="@+id/carddetailmedia_contentlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carddetailmedia_textView1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/carddetailmedia_loadmoretext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_below="@+id/carddetailmedia_contentlayout"
        android:layout_marginRight="16dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:src="@drawable/loadmore" />
    </LinearLayout>

</RelativeLayout>