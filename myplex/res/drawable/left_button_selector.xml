<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="@android:color/holo_blue_light" />

            <solid android:color="@color/blue" />

            <padding android:bottom="2dp" android:left="5dp" android:right="0dp" android:top="2dp" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="@android:color/white" />

            <solid android:color="@android:color/white" />

            <padding android:bottom="2dp" android:left="5dp" android:right="0dp" android:top="2dp" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" />
        </shape></item>

</selector>