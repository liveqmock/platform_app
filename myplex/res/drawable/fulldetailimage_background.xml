<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- drop shadow stack -->

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="4dp" />

            <solid android:color="#1ab6b6b4" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="4dp" />

            <solid android:color="#33b6b6b4" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="4dp" />

            <solid android:color="#40b6b6b4" />
        </shape>
    </item>

    <!-- background -->
    <item>
        <shape>
            <solid android:color="@color/white" />

            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>